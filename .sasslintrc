{
  "options": {
    "merge-default-rules": false,
    "max-warnings": 50
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 1,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 1,
    "no-important": 2,
    "hex-notation": [
      2,
      {
        "style": "uppercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": 2
      }
    ]
  }
}